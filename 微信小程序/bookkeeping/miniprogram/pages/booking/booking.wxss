@import "./booking.skeleton.wxss";
.booking-bg {
  height: 200rpx;
  background-color: #2986c3;
}

.booking-box {
  padding: 20rpx;
  margin-top: -60rpx;
}

.type-box {
  background-color: #fff;
  border-radius: 20rpx;
  padding-top: 40rpx;
}

.type-title {
  width: 240rpx;
  height: 60rpx;
  margin: 0 auto;
  border-radius: 30rpx;
  border: 1rpx solid #318AF9;
  display: flex;
  overflow: hidden;
  color: #fff;
  background-color:#2986c3;
}

.type-title-item {
  width: 50%;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #fff;
}

.type-title-item.active {
  background-color: #318AF9;
}

.type-list {
  width: 20%;
  text-align: center;
  transition: trsansform 0.2s linear;
}

.type-icon-box {
  margin-top: 40rpx;
}

.type-icon {
  padding: 30rpx;
  padding-top: 0;
  font-size: 24rpx;
}
.type-img{
  height: 41rpx;
}
.type-icon.active {
  transform: scale(1.2);
}

.type-icon-title {
  margin-top: 6rpx;
}

.account-box {
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
}

.account-box1 {
  padding: 20rpx;
}

.account-title {
  padding: 10rpx 0;
  padding-top: 0rpx;
  border-bottom: 1px #ddd solid;
  font-size: 28rpx;
}

.account-list {
  padding: 20rpx 0;
  padding-bottom: 10rpx;
}

.account-list-item {
  width: 17%;
  text-align: center;
  background-color: #ddd;
  border-radius: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  margin: 0 10rpx;
  color: #fff;
}

.account-list-item.active {
  background-color: #318AF9;
}

.input-box {
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
}

.input-content {
  padding: 10rpx;
}

.input-date {
  font-size: 24rpx;
  margin-bottom: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.input-date:last-child {
  margin-bottom: 0rpx;
}

.date-title {
  margin-left: 20rpx;
}

.input-price {
  color: #989898;
}
.btn{
  width: 100%;
}
.conserve-btn {
  width: 100%;
  border-radius: 10rpx;
  background-color: #318AF9;
  color: #fff;
  font-size: 28rpx;
  margin: 60rpx 0 40rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-weight: 600;
}